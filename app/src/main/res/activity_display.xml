<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blacky"
    tools:context="com.example.myfirstapp.DisplayMessageActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:shimmer_animation_duration="1200">
                <TextView
                android:text="Name:"
                android:textSize="20sp"
                android:textStyle="bold"

                android:textColor="#ffffff"
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:id="@+id/textView6"
                android:layout_weight="1"
                    tools:ignore="HardcodedText" />
            </io.supercharge.shimmerlayout.ShimmerLayout>





             <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F8E4CC"
                 android:paddingLeft="30dp"
                 android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                 android:layout_weight="1"
                />






            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:shimmer_animation_duration="1200">



                <TextView
                    android:text="DOB:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText" />

            </io.supercharge.shimmerlayout.ShimmerLayout>




            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
               android:paddingLeft="30dp"
                android:textColor="#F8E4CC"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_weight="1"
                />






            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:shimmer_animation_duration="1200">


                <TextView
                    android:text="Contact:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText" />
            </io.supercharge.shimmerlayout.ShimmerLayout>




            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F8E4CC"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                />




            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:shimmer_animation_duration="1200">

                <TextView
                    android:text="E-mail:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText" />
            </io.supercharge.shimmerlayout.ShimmerLayout>




            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F8E4CC"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                />





            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:shimmer_animation_duration="1200">


                <TextView
                    android:text="Address:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText" />

            </io.supercharge.shimmerlayout.ShimmerLayout>





            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F8E4CC"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                />



        </LinearLayout>

    </ScrollView>

    <include layout="@layout/layoutfromlibrary" />

</RelativeLayout>
